<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MaterialPillsBox">
        <attr name="maxPills" format="integer"/>
        <attr name="pillBackground" format="reference"/>
        <attr name="pillSelectedBackground" format="reference"/>
        <attr name="backgroundSize" format="dimension"/>
        <attr name="circleSize" format="dimension"/>
        <attr name="pillTextColor" format="color|reference"/>
        <attr name="showCloseIcon" format="boolean"/>
        <attr name="closeIcon" format="reference"/>
        <attr name="pillMarginTop" format="dimension"/>
        <attr name="pillMarginBottom" format="dimension"/>
        <attr name="pillMarginLeft" format="dimension"/>
        <attr name="pillMarginRight" format="dimension"/>
        <attr name="animation">
            <enum name="BUTT" value="0"/>
            <enum name="ROUND" value="1"/>
            <enum name="SQUARE" value="2"/>
        </attr>
    </declare-styleable>
</resources>